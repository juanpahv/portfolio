---
interface Props{
  href: string
  target?: string
  className?: string
}

const { href, target, className } = Astro.props
---

<a
  class=`rounded-full border border-white/10 bg-white/5 flex justify-center items-center gap-x-2 py-2 px-4 hover:scale-110 hover:bg-white/10 transition ${className}`
  target= {target || "_blank"}
  rel="noopener noreferrer"
  {href}
  {target}
  >
  <slot />
</a>
