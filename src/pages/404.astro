---
import Pill from "../components/Pill.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 | Page Not Found">
  <section class="flex flex-col items-center justify-center text-center mx-auto gap-y-4 w-full lg:w-[740px] h-screen px-8">
    <h1 class="text-4xl font-bold">404</h1>
    <p class="text-lg">Page not found</p>
    <Pill href="/" target="_self" className="mt-4">Go back home</Pill>
  </section>
</Layout>