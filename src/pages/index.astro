---
import Layout from "../layouts/Layout.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import BooksIcon from "../components/icons/BooksIcon.astro";
import UserCodeIcon from "../components/icons/UserCodeIcon.astro";
import Pill from "../components/Pill.astro";
import Education from "../components/Education.astro";
import Me from "../components/Me.astro";
import Skills from "../components/Skills.astro";
import SkillsIcon from "../components/icons/SkillsIcon.astro";
import Header from "../components/Header.astro";
import Projects from "@/components/Projects.tsx";
---

<Layout title="Juan P Hernández | Portfolio" description="Software and Computer Systems Engineering Student. Full-stack web developer in progress">
  <Header />
  <main>
    <section
      class="flex flex-col items-center justify-center text-center mx-auto gap-y-4 w-full lg:w-[740px] h-[100svh] px-8"
    >
      <h1 class="text-4xl font-bold flex justify-center text">
        Juan Pablo Hernández
      </h1>
      <h2 class="text-2xl opacity-50">
        Software and Computer Systems Engineering Student
      </h2>
      <section class="flex gap-x-4 mt-4">
        <Pill href="https://github.com/juanpahv">
          <GithubIcon class="size-6" /> GitHub
        </Pill>
        <Pill href="https://www.linkedin.com/in/juanpahv/">
          <LinkedInIcon class="size-6" /> LinkedIn
        </Pill>
      </section>
    </section>
    <section id="about" class="flex flex-col gap-y-4 w-full lg:w-[740px] mx-auto mb-40 px-8">
      <h1 class="flex justify-center items-center text-2xl font-bold">
        About
      </h1>
      <h2 class="flex items-center gap-x-2 text-2xl opacity-50">
        <UserCodeIcon class="size-6" /> Me
      </h2>
      <Me />
      <h2 class="flex items-center gap-x-2 text-2xl opacity-50 mt-12">
        <BooksIcon class="size-6" /> Education
      </h2>
      <Education />
    </section>
    <section id="skills" class="flex flex-col w-full mx-auto mb-20">
      <h1 class="flex justify-center gap-x-2 items-center text-2xl font-bold">
        <SkillsIcon class="size-6"/>
        Skills
      </h1>
      <span class="md:grid grid-cols-2 mx-auto">
        <Skills />
      </span>
    </section>
    <section id="projects" class="flex flex-col justify-center items-center gap-y-4 w-full lg:w-[740px] mx-auto mb-40 px-20">
      <h1 class="flex justify-center items-center text-2xl font-bold">
        Projects
      </h1>
      <Projects client:load />
    </section>
  </main>
</Layout>
